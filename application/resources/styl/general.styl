h1,h2,h3,h4,h5,h6
	text-align center
	font-style italic
div#principal
	background-color negro!important
	width 100%
	height 70px
	padding 10px 0
	z-index 30
	position fixed
	top 0
	right 0
	left 0
	border-bottom 1px solid darken(Primario,50%)
	box-shadow 0 3px .7em black
	nav, .navegacionGeneral
		background transparent
		box-shadow 0 0 transparent
		z-index 3
		top 0
		right 0
		width 40px
		height 40px
		&.navegacionGeneral--activo
			position fixed
			top 1em
			right 1em
			z-index 30
	#menuItems
		position fixed
		padding 1em
		top 70px
		right -50%
		height 100%
		width 50%
		background-color negro
		background-color rgba(negro,.9)
		transition all .5s ease
		text-align center
		@media(max-width:720px)
			width 100%
			right -100%
		a
			display block
			font-size 1.25em
			line-height 1.5em
			font-weight 300
			letter-spacing .15em
			color #aaa
			transition all .3s ease
			&:hover
				color white
			&:active
				color Primario
			&.big
				font-size 2em
				font-weight 700
		&.menuItemsActivo
			display block
			right 0!important
			top 70px
	.fast-mag
		width 150px
		box-sizing border-box
		margin .5em 1em
		float left
	.contenedor
		position relative
	img
		vertical-align center
		display inline-block

.menuActivador 
	margin-right .75em
	margin-top .75em
	width 50px
	height 50px
	display block
	cursor pointer
	img
		width 30px
		height 30px
.navegacionGeneral .menuActivador
	clear both
	position absolute
	right 1em
	top 1em
	width 100%
#principal .menuActivador
	float right
header
	background-image url("../img/patron.png"), url("../img/header.jpg")
	background-color negro
	background-repeat repeat, no-repeat
	background-position center center
	background-size 4px 4px, cover
	width 100%
	height 210px
	margin-top 70px
	color white
	vertical-align middle
	position relative
	h1,h2,h3,h4,h5,h6
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		margin auto
		height 1.5em
		text-shadow 0 3px 2px rgba(black,.8), 0 .1em .1em rgba(black,.8)
#contenido
	font-weight 300
	font-size 1.2em
	letter-spacing .02em
	box-shadow 0 -.5em .5em rgba(black,.6)
	background-color #EFEFEF
	border-top 2px solid white
	.contenedor
		center(720px, 1em)
	.boton
		max-width 600px
		margin 1em auto
		@media(min-width: 720px)
			font-size .85em
.contenedor
	center(980px, 1em)